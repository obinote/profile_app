{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "paths": {
      "*": ["./src/*"],
      "components/*": ["./src/components/*"],
      "locales/*": ["./src/locales/*"],
      "navigations/*": ["./src/navigations/*"],
      "reduxs/*": ["./src/reduxs/*"],
      "screens/*": ["./src/screens/*"],
      "hooks/*": ["./src/hooks/*"],
      "utils/*": ["./src/utils/*"],
    }
  }
}
